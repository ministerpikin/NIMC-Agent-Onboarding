<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lottie="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.IntroFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieIntro"
        android:layout_width="260dp"
        android:layout_height="260dp"
        lottie:lottie_rawRes="@raw/nimc_intro_animation"
        lottie:lottie_autoPlay="true"
        lottie:lottie_loop="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvIntroTitle"
        style="@style/NimcText.Title"
        android:text="Welcome to NIMC Agent Onboarding"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvIntroBody"
        style="@style/NimcText.Body"
        android:text="Weâ€™ll guide you through registration, face capture and verification."
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnContinue"
        style="@style/NimcButton.Primary"
        android:text="Continue"/>

    <Button
        android:id="@+id/btnNotInterested"
        style="@style/NimcButton.Secondary"
        android:text="Not interested"
        android:layout_marginTop="12dp"/>

</LinearLayout>
